\newreactive{highlight}{
        color : red;
        background-color : lime;
        border-color : #0000ff;
        bold;
        italic;
        underline;
        strikethrough
}

\newfixed{note}{
        color : red;
        background-color : lime;
        border-color : #0000ff;
        bold;
        italic;
        underline
}


\slide{Inicio}{Definir a função}
\begin
def nome_da_funcao(...):
        ...
        return
\end

\highlight{Args}{Argumentos são variáveis que podem ser passadas à função para esta executar operações com recurso aos mesmos}
\slide{Argumentos}{Sobre os args} 
\description{Este slide irá apresentar uma breve descrição}
\begin
def nome_da_funcao(\Args{arg1, arg2, ...}):
        var1 = “ola”
        var2 = 5.4
        var3 = arg1
        printf("Ola %s\\n",nome)
        ...
        return var1
\end

\note{VarsLoc}{Variáveis Locais podem ser definidas e pode-lhes ser atribuído valor ou outra variável (atribuindo assim o valor atual da mesma)}
\slide{VarsLoc}{Sobre as variáveis locais}
\begin
def nome_da_funcao(arg1, arg2, ...):
        \VarsLoc{var1 = “ola”}
        var2 = 5.4
        \Args{var3 = arg1}
        ...
        return var1
\end

\slide{Ops}{Operadores}
\begin
def nome_da_funcao(arg1, arg2, ...):
        var1 = “ola”
        var2 = 5.4
        var3 = arg1
        var4 = var2 \highlight{+}{Operadores podem ser utilizados para combinar valores, estejam estes armazenados em variáveis ou não} 7
        ...
        return var1
\end

\diapositivo{ExOps}{Exercicio}
\begin
def nome_da_funcao(arg1, arg2, ...):
        var1 = “ola”
        var2 = 5.4
        var3 = arg1
        var2 = var2 \exercise{/[-+*\/]/}{Preencha o campo indicado com um Operador por forma a atualizar o valor da variável “var2” para 2.4
        } 3
        ...
        return var1
\end


\order{Inicio, Argumentos, VarsLoc, (Ops | ExOps)}

